<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Users Data</title>
  <style>
    * {
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 40px;
      background-color: #f2f2f2;
    }

    h1 {
      margin-bottom: 20px;
    }

    table {
      border-collapse: collapse;
      width: 90%;
      max-width: 900px;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    th, td {
      border: 1px solid #ccc;
      padding: 12px 16px;
      text-align: center;
    }

    th {
      background-color: #4CAF50;
      color: white;
    }

    td form,
    td a {
      display: inline-block;
    }

    .button {
      font-size: 14px;
      padding: 6px 12px;
      margin: 2px;
      background-color: #4CAF50;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
    }

    .button:hover {
      background-color: #45a049;
    }

    .top-button {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

  <h1>All Users</h1>
  <a href="/user/new" class="button top-button">Add User</a>

  <table>
    <tr>
      <th>Id</th>
      <th>Email</th>
      <th>Username</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

    <% for (user of users) { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td>
          <form method="GET" action="/user/<%= user.id %>/edit">
            <button class="button" type="submit">Edit</button>
          </form>
        </td>
        <td>
          <a href="/user/<%= user.id %>/delete" class="button">Delete</a>
        </td>
      </tr>
    <% } %>

  </table>

</body>
</html>
